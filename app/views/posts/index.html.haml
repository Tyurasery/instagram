%h1 Listing posts

%table
  %thead
    %tr
      %th Description
      %th Photo
      %th User
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.description
        %td= image_tag post.photo, size: '400x300'
        %td= post.user_id
        %td= link_to 'Show', post
        %td= link_to 'Dislike', post
        %td= post.dislike_count= ""


%br

= link_to 'New Post', new_post_path
